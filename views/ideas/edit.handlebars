{{#each errors}}
 <div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}

<div class="card card-body">
    <h3>Edit Idea</h3>
    <form action="/ideas/{{idea.id}}?_method=PUT" method="post" >
    <input type="hidden" name="_method" value="PUT">
     <div class="form-group">
        Title : <input type="text" value="{{idea.title}}" class="form-control" name="title" required>
     </div>
     <div class="form-group">
       Details :  <input type="textarea" value="{{idea.details}}" class="form-control" name="details" required>
     </div>
     <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>